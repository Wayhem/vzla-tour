<% include ../partials/header %>
<div class="container">
  <div class="row">
    <div class="formDiv">
      <h1 class="formH1">Editar <%= toursite.name %></h1>
      <form action="/toursites/<%= toursite._id %>?_method=PUT" method="POST">
        <div class="form-group">
          <input class="form-control" type="text" name="toursite[name]" value="<%= toursite.name %>">
        </div>
        <div class="form-group">
          <input class="form-control" type="text" name="toursite[image]" value="<%= toursite.image %>">
        </div>
        <div class="form-group">
          <input class="form-control" type="text" name="toursite[description]" value="<%= toursite.description %>">
        </div>
        <div class="form-group">
          <input class="form-control" type="number" name="toursite[price]" value="<%= toursite.price %>" min="0" step="1">
        </div>
        <div class="form-group">
          <button class="btn btn-lg btn-primary btn-block">Editar</button>
        </div>
      </form>
      <a href="/toursites/<%= toursite._id %>">Volver</a>
    </div>
  </div>
</div>
<% include ../partials/footer %>

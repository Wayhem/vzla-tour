<% include ../partials/header %>
<div class="container">
  <div class="row">
    <div style="width: 30%; margin: 30px auto;">
      <h1 style="text-align: center;">Nuevo sitio</h1>
      <form action="/toursites" method="POST">
        <div class="form-group">
          <input class="form-control" type="text" name="name" placeholder="Nombre">
        </div>
        <div class="form-group">
          <input class="form-control" type="text" name="image" placeholder="Imagen url">
        </div>
        <div class="form-group">
          <input class="form-control" type="text" name="body" placeholder="Descripcion">
        </div>
        <div class="form-group">
          <button class="btn btn-lg btn-primary btn-block">Registrar</button>
        </div>
      </form>
      <a href="/toursites">Volver</a>
    </div>
  </div>
</div>

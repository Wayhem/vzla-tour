<% include ../partials/header %>
<div class="container">
  <div class="row row-centered">
    <div class="formDiv col-md-6 col-sm-9 col-xs-12 col-centered">
      <h1 class="formH1">Editar comentario en <%= toursite.name %></h1>
      <form action="/toursites/<%= toursite._id %>/comments/<%=comment._id%>?_method=PUT" method="POST">
        <div class="form-group">
          <input class="form-control" type="text" name="comment[text]" value="<%=comment.text%>">
        </div>
        <div class="form-group">
          <button class="btn btn-lg btn-primary btn-block">Editar comentario</button>
        </div>
      </form>
      <a href="/toursites/<%= toursite._id %>">Volver</a>
    </div>
  </div>
</div>
<% include ../partials/footer %>
